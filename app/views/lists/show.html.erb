<h3>Movies in this list</h3>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <% if bookmark.id.present? %>
      <li>
        <strong><%= bookmark.movie.title %></strong> - <%= bookmark.comment %>
        <%= button_to "Remove movie",
                      bookmark_path(bookmark),
                      method: :delete,
                      data: { turbo_confirm: "Remove this movie from the list?" },
                      class: "btn btn-link text-danger d-inline p-0" %>
      </li>
    <% end %>
  <% end %>
</ul>

<hr>

<%= button_to "Delete this entire list",
              list_path(@list),
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete the whole list?" },
              class: "btn btn-danger" %>

<%= link_to "Back to all lists", lists_path, class: "btn btn-secondary mt-3" %>
